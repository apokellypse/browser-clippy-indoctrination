{
  "name": "Clippy",
  "version": "1.0.0",
  "description": "clippy",
  "browser_action": {
    "default_title": "Open the popup",
    "default_popup" : "popup.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "content_scripts": [ 
    {
      "matches": ["<all_urls>"],
      "css": [ "clippy.css" ],
      "js": [ 
        "jquery-1.7.min.js",
        "clippy.min.js"
      ]
    } 
  ],
  "web_accessible_resources": [
    "clippy.css",
    "jquery-1.7.min.js",
    "clippy.min.js"
  ],
    "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "<all_urls>"
  ]
}
